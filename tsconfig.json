{
    "compilerOptions": {
        // Target and Module Configuration
        "target": "ES2018",
        "module": "CommonJS",
        "moduleResolution": "node",
        "lib": ["DOM", "ES2018"],
        
        // Type Checking
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        
        // Module Resolution
        "importHelpers": false,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        
        // Source Maps
        "sourceMap": true,
        "inlineSources": true,
        
        // Project Structure
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        
        // Additional Settings
        "skipLibCheck": true,
        "types": ["node"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}